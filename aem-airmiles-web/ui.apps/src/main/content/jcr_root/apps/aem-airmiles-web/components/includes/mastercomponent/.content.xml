<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured">
    <cq:dialog
        jcr:primaryType="nt:unstructured"
        jcr:title="Text"
        sling:resourceType="cq/gui/components/authoring/dialog"
        helpPath="https://www.adobe.com/go/aem_cmp_text_v2"
        trackingFeature="core-components:text:v2">
        <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}true">
                    <items jcr:primaryType="nt:unstructured">
                        <properties
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Properties"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                            <items jcr:primaryType="nt:unstructured">
                                <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            granite:class="cq-RichText-FixedColumn-column"
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <active
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    checked="{Boolean}true"
                                                    name="./active"
                                                    text="Active component?"
                                                    value="true"/>
                                                <analytics-options
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/well"
                                                    margin="{Boolean}false">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <datatrackid
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Analytics Tracking ID"
                                                            name="./dataTrackID"/>
                                                        <dataclickid
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Analytics Click ID"
                                                            name="./dataClickID"/>
                                                        <dataTrackType
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            emptyText="Track Type"
                                                            fieldLabel="Analytics TrackType"
                                                            name="./dataTrackType">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <internal
                                                                    jcr:primaryType="nt:unstructured"
                                                                    selected="{Boolean}true"
                                                                    text="Internal"
                                                                    value="internal"/>
                                                                <button
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Button"
                                                                    value="button"/>
                                                                <exit
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Exit"
                                                                    value="exit"/>
                                                                <social
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Social"
                                                                    value="social"/>
                                                                <banner
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Banner"
                                                                    value="banner"/>
                                                            </items>
                                                        </dataTrackType>
                                                    </items>
                                                </analytics-options>
                                                <linktarget
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    emptyText="Link Target"
                                                    fieldLabel="Link Target"
                                                    name="./linkTarget">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <newtab
                                                            jcr:primaryType="nt:unstructured"
                                                            selected="{Boolean}true"
                                                            text="New tab"
                                                            value="_blank"/>
                                                        <sametab
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Same Tab"
                                                            value="_self"/>
                                                    </items>
                                                </linktarget>
                                                <textalign
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    emptyText="Text Alignment"
                                                    fieldLabel="Text Alignment"
                                                    name="./textAlign">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <alignleft
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Align Left"
                                                            value="text-left"/>
                                                        <alignright
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Align Right"
                                                            value="text-right"/>
                                                        <aligncenter
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Align Center"
                                                            value="text-center"/>
                                                    </items>
                                                </textalign>
                                                <titleHeading
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="Heading tag"
                                                    name="./titleHeading">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <none
                                                            jcr:primaryType="nt:unstructured"
                                                            text="None"
                                                            value=""/>
                                                        <h1
                                                            jcr:primaryType="nt:unstructured"
                                                            text="H1"
                                                            value="h1"/>
                                                        <h2
                                                            jcr:primaryType="nt:unstructured"
                                                            text="H2"
                                                            value="h2"/>
                                                        <h3
                                                            jcr:primaryType="nt:unstructured"
                                                            text="H3"
                                                            value="h3"/>
                                                    </items>
                                                </titleHeading>
                                                <titleType
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="Title type"
                                                    name="./titleType">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <none
                                                            jcr:primaryType="nt:unstructured"
                                                            text="None"
                                                            value=""/>
                                                        <h1large
                                                            jcr:primaryType="nt:unstructured"
                                                            text="H1 - Large"
                                                            value="h1-large"/>
                                                        <h1regular
                                                            jcr:primaryType="nt:unstructured"
                                                            text="H1 - Regular"
                                                            value="h1-regular"/>
                                                        <h1small
                                                            jcr:primaryType="nt:unstructured"
                                                            text="H1 - Small"
                                                            value="h1-small"/>
                                                        <h2xlarge
                                                            jcr:primaryType="nt:unstructured"
                                                            text="H2 - XLarge"
                                                            value="h2-xlarge"/>
                                                        <h2large
                                                            jcr:primaryType="nt:unstructured"
                                                            text="H2 - Large"
                                                            value="h2-large"/>
                                                        <h2regular
                                                            jcr:primaryType="nt:unstructured"
                                                            text="H2 - Regular"
                                                            value="h2-regular"/>
                                                        <h2small
                                                            jcr:primaryType="nt:unstructured"
                                                            text="H2 - Small"
                                                            value="h2-small"/>
                                                        <h3large
                                                            jcr:primaryType="nt:unstructured"
                                                            text="H3 - Large"
                                                            value="h3-large"/>
                                                        <h3regular
                                                            jcr:primaryType="nt:unstructured"
                                                            text="H3 - Regular"
                                                            value="h3-regular"/>
                                                        <h3small
                                                            jcr:primaryType="nt:unstructured"
                                                            text="H3 - Small"
                                                            value="h3-small"/>
                                                    </items>
                                                </titleType>
                                                <color-options
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/well"
                                                    margin="{Boolean}false">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <colorPicker
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldLabel="Element color"
                                                            name="./colorPicker">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <transparent
                                                                    jcr:primaryType="nt:unstructured"
                                                                    selected="{Boolean}true"
                                                                    text="Transparent"
                                                                    value="--am-base-color-transparent"/>
                                                                <citrine
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Citrine"
                                                                    value="--am-base-color-citrine-800"/>
                                                                <emerald
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Emerald"
                                                                    value="--am-base-color-emerald-800"/>
                                                                <saphire
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Saphire"
                                                                    value="--am-base-color-saphire-800"/>
                                                                <amethyst
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Amethyst"
                                                                    value="--am-base-color-amethyst-800"/>
                                                                <ruby
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Ruby"
                                                                    value="--am-base-color-ruby-800"/>
                                                                <steel
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Steel"
                                                                    value="--am-base-color-steel-800"/>
                                                            </items>
                                                        </colorPicker>
                                                    </items>
                                                </color-options>
                                                <bgcolor-options
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/well"
                                                    margin="{Boolean}false">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <bgcolor
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldLabel="Element Background color"
                                                            name="./bgcolor">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <none
                                                                    jcr:primaryType="nt:unstructured"
                                                                    selected="{Boolean}true"
                                                                    text="None"
                                                                    value=""/>
                                                                <transparent
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Transparent"
                                                                    value="--am-base-bgcolor-transparent"/>
                                                                <white
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="White"
                                                                    value="--am-base-bgcolor-white"/>
                                                                <bluePurple
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Blue-Purple-Gradient"
                                                                    value="--am-base-colour-blue-purple-gradient"/>
                                                                <lightblueBlue
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Lightblue-Blue-Gradient"
                                                                    value="--am-base-colour-lightblue-blue-gradient"/>
                                                                <purplePurple
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Purple-Purple-Gradient"
                                                                    value="--am-base-colour-purple-purple-gradient"/>
                                                                <pinkPurple
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Pink-Purple-Gradient"
                                                                    value="--am-base-colour-pink-purple-gradient"/>
                                                                <tanPink
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Tan-Pink-Gradient"
                                                                    value="--am-base-colour-tan-pink-gradient"/>
                                                                <yellowTan
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Yellow-tan-Gradient"
                                                                    value="--am-base-colour-yellow-tan-gradient"/>
                                                                <citrine
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Citrine"
                                                                    value="--am-base-bgcolor-citrine-800"/>
                                                                <emerald
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Emerald"
                                                                    value="--am-base-bgcolor-emerald-800"/>
                                                                <saphire
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Saphire"
                                                                    value="--am-base-bgcolor-saphire-800"/>
                                                                <amethyst
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Amethyst"
                                                                    value="--am-base-bgcolor-amethyst-800"/>
                                                                <ruby
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Ruby"
                                                                    value="--am-base-bgcolor-ruby-800"/>
                                                                <steel
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Steel"
                                                                    value="--am-base-bgcolor-steel-800"/>
                                                            </items>
                                                        </bgcolor>
                                                    </items>
                                                </bgcolor-options>
                                                <googleAdSenseConfig
                                                    jcr:primaryType="nt:unstructured"
                                                    jcr:title="Google AdSense Config"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <enableGoogleAdSense
                                                            cq:showOnCreate="{Boolean}true"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            fieldDescription="Selection will include Google GTP and AdSense scripts for serving ads."
                                                            name="./enableGoogleAdSense"
                                                            text="Enable Google AdSense for this page"
                                                            value="{Boolean}true"
                                                        />
                                                        <adDetails
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                            composite="{Boolean}true"
                                                            required="{Boolean}false">
                                                            <field
                                                                granite:class="cq-multi-field"
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                                                emptyText="AD Details"
                                                                name="./adDetails">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <adUnit
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/accordion"
                                                                        margin="{Boolean}false"
                                                                        maximized="{Boolean}true"
                                                                        multiple="{Boolean}true"
                                                                        variant="quiet">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <adUnitInfo
                                                                                jcr:primaryType="nt:unstructured"
                                                                                jcr:title="Ad Unit"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                                                <items jcr:primaryType="nt:unstructured">
                                                                                    <adSize
                                                                                        jcr:primaryType="nt:unstructured"
                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                                        emptyText="Select Ad Size"
                                                                                        fieldLabel="Ad Size"
                                                                                        name="./adSlotAdSize">
                                                                                        <items jcr:primaryType="nt:unstructured">
                                                                                            <leaderboard
                                                                                                jcr:primaryType="nt:unstructured"
                                                                                                text="Leaderboard"
                                                                                                value="leaderboard"/>
                                                                                            <billboard
                                                                                                jcr:primaryType="nt:unstructured"
                                                                                                text="Billboard"
                                                                                                value="billboard"/>
                                                                                            <mediumRectangle
                                                                                                jcr:primaryType="nt:unstructured"
                                                                                                text="Medium Rectangle (MPU)"
                                                                                                value="mediumRectangle"/>
                                                                                        </items>
                                                                                    </adSize>
                                                                                    <adPath
                                                                                        jcr:primaryType="nt:unstructured"
                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                                        fieldLabel="AdSense Ad Path"
                                                                                        fieldDescription="Path in Google AdSense to the Ad"
                                                                                        name="./adSlotAdPath"
                                                                                        renderReadOnly="{Boolean}true"
                                                                                        required="{Boolean}false" />
                                                                                    <adID
                                                                                        jcr:primaryType="nt:unstructured"
                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                                        fieldLabel="AdSense Ad ID"
                                                                                        fieldDescription="ID that will also be assigned to the AdBanner component so the AdSense script can insert the ad to the component."
                                                                                        name="./adSlotAdID"
                                                                                        renderReadOnly="{Boolean}true"
                                                                                        required="{Boolean}false" />
                                                                                </items>
                                                                            </adUnitInfo>
                                                                        </items>
                                                                    </adUnit>
                                                                </items>
                                                            </field>
                                                        </adDetails>
                                                    </items>
                                                </googleAdSenseConfig>
                                            </items>
                                        </column>
                                    </items>
                                </columns>
                            </items>
                        </properties>
                    </items>
                </tabs>
            </items>
        </content>
    </cq:dialog>
</jcr:root>
