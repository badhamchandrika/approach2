<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Image Config"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-title__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <imagePosition
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Image Position"
                                                name="./imagePosition">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <unset
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Unset"
                                                        value=""/>
                                                    <topLeft
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Top Left"
                                                        value="d-flex align-items-start justify-content-start"/>
                                                    <topCenter
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Top Center"
                                                        value="d-flex align-items-start justify-content-center"/>
                                                    <topRight
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Top Right"
                                                        value="d-flex align-items-start justify-content-end"/>
                                                    <midLeft
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Middle Left"
                                                        value="d-flex align-items-center justify-content-start"/>
                                                    <midCenter
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Middle Center"
                                                        value="d-flex align-items-center justify-content-center"/>
                                                    <midRight
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Middle Right"
                                                        value="d-flex align-items-center justify-content-end"/>
                                                    <bottomLeft
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Bottom Left"
                                                        value="d-flex align-items-end justify-content-start"/>
                                                    <bottomCenter
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Bottom Center"
                                                        value="d-flex align-items-end justify-content-center"/>
                                                    <bottomRight
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Bottom Right"
                                                        value="d-flex align-items-end justify-content-end"/>
                                                </items>
                                            </imagePosition>
                                            <imageScale
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Image Scale"
                                                name="./imageScale">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <full
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Full size - 100%"
                                                        value="w-100"/>
                                                    <threeQuarters
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Three Quarters - 75%"
                                                        value="w-75"/>
                                                    <half
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Half - 50%"
                                                        value="w-50"/>
                                                    <quarter
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Quarter - 25%"
                                                        value="w-25"/>
                                                    <none 
                                                        jcr:primaryType="nt:unstructured"
                                                        text="None"
                                                        value=""/>
                                                </items>
                                            </imageScale>
                                            <imageRounded
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                name="./imageRounded"
                                                text="Rounded Corner"
                                                uncheckedValue="false"
                                                value="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
